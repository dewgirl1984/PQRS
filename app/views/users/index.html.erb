<h1>Listing users</h1>

<table>
  <tr>
    <th>Uuid</th>
    <th>Email</th>
    <th>First Name</th>
    <th>Last Name</th>
    <th>QR Code Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.uuid %></td>
    <td><%= user.email %></td>
    <td><%= user.first_name %></td>
    <td><%= user.last_name %></td>
    <td><%= user.qrcodes.first.name if user.qrcodes.count > 0%><td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

